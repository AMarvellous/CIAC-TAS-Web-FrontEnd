@page "/GenerarExamenAsaDetalle/{handler?}"
@model CIAC_TAS_Web_UI.Pages.ASA.GenerarExamenAsaDetalleModel
@{
    ViewData["Title"] = "Generar Examen Asa Detalle";
}

<!-- From here, we should put this code as template in each page -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Generar examen ASA Detalle</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                        <li class="breadcrumb-item active">Generar examen ASA Detalle</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- /.box-header -->
    <div class="col-sm-12">
        <a asp-page="/ASA/GenerarExamenAsa" class="fa fa-arrow-circle-left" style="font-size:25px;"></a>
    </div>
    <br />

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Nuevo Examen Generado</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">

                <form method="post" enctype="multipart/form-data">
					<div class="text-danger" asp-validation-summary="ModelOnly"></div>

					<div class="form-group">
                        <label asp-for="GrupoIdModelView" class="control-label">Grupo</label>
                        <select asp-for="GrupoIdModelView" asp-items="Model.GrupoOptions" class="form-control" placeholder="Seleccione una opcion">
							<option value="">Seleccione una opcion</option>
						</select>
                        <span asp-validation-for="GrupoIdModelView" class="text-danger"></span>
					</div>

					<br />
					<div class="row">

                        <div class="col-4">
                            <input type="button" id="btnGenerarExamen" onclick="generateExamen(this)" class="btn btn-primary btn-block" value="Generar">
                        </div>

						<!-- /.col -->
					</div>
				</form>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                @{
                    if (Model.Message != null && Model.Message != string.Empty)
                    {
                        <div id="mensajeDiv" class="callout callout-danger">
                            @Model.Message
                        </div>
                    }
                }
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- To here -->

<script type="text/javascript">

    function generateExamen() {
        var grupoId = $('#GrupoIdModelView').val();
        grupoId
        if (grupoId != '') {
            window.location = '@Url.Page("/ASA/GenerarExamenASADetalle")/?handler=GenerarExamenAsa&grupoId=' + grupoId;

            //setTimeout(function () {
            //    window.location.href = '@Url.Page("/ASA/GenerarExamenAsa")';
            //}, 8000);            
        }
        
    }
</script>