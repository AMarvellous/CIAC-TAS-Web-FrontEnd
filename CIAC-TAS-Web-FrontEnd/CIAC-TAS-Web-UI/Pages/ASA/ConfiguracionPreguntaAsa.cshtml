@page "/ConfiguracionPreguntaAsa/{handler?}/{id?}"
@model CIAC_TAS_Web_UI.Pages.ASA.ConfiguracionPreguntaAsaModel
@{
	ViewData["Title"] = "Configuracion Pregunta Asa";
}

<!-- From here, we should put this code as template in each page -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Configuracion Pregunta Asa Page</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
						<li class="breadcrumb-item active">Configuracion Pregunta Asa Page</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<!-- /.box-header -->
	<div class="col-sm-12">
		<a asp-page="/ASA/ConfiguracionPreguntasAsa" class="fa fa-arrow-circle-left" style="font-size:25px;"></a>
	</div>
	<br />

	<!-- Main content -->
	<section class="content">

		<!-- Default box -->
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Configuracion Pregunta ASA</h3>

				<div class="card-tools">
					<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
						<i class="fas fa-minus"></i>
					</button>
				</div>
			</div>
			<div class="card-body">

				<form method="post" enctype="multipart/form-data">
					<div class="text-danger" asp-validation-summary="ModelOnly"></div>

					<div class="form-group">
						<label asp-for="ConfiguracionPreguntaAsaModelView.GrupoId" class="control-label">Grupo</label>
						<select asp-for="ConfiguracionPreguntaAsaModelView.GrupoId" asp-items="Model.GrupoOptions" class="form-control" placeholder="Seleccione una opcion">
							<option value="">Seleccione una opcion</option>
						</select>
						<span asp-validation-for="ConfiguracionPreguntaAsaModelView.GrupoId" class="text-danger"></span>
					</div>

					<!-- Date and time -->
					<div class="form-group">
						<label asp-for="ConfiguracionPreguntaAsaModelView.FechaInicial">Fecha examen</label>
						<input asp-for="ConfiguracionPreguntaAsaModelView.FechaInicial" class="form-control" placeholder="Ingrese una Fecha" class="form-control datetimepicker-input">
					</div>

					<br />
					<div class="row">
						@{
							if (Model.ConfiguracionPreguntaAsaModelView?.Id > 0)
							{
								<div class="col-4">
									<input type="submit" asp-page-handler="EditConfiguracionPreguntaAsa" class="btn btn-primary btn-block" value="Guardar">
								</div>

							}
							else
							{
								<div class="col-4">
									<input type="submit" asp-page-handler="NewConfiguracionPreguntaAsa" class="btn btn-primary btn-block" value="Crear">
								</div>
							}
						}

						<!-- /.col -->
					</div>
				</form>

			</div>
			<!-- /.card-body -->
			<div class="card-footer">
				@{
					if (Model.Message != null && Model.Message != string.Empty)
					{
						<div id="mensajeDiv" class="callout callout-danger">
							@Model.Message
						</div>
					}
				}
			</div>
			<!-- /.card-footer-->
		</div>
		<!-- /.card -->

	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->
