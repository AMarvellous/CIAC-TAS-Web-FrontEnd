@page "/ConfiguracionPreguntasAsa"
@model CIAC_TAS_Web_UI.Pages.ASA.ConfiguracionPreguntasAsaModel
@{
    ViewData["Title"] = "Configuracion Pregunta Asa";
}

<!-- From here, we should put this code as template in each page -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Configuracion preguntas ASA Page</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                        <li class="breadcrumb-item active">Configuracion preguntas ASA Page</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Lista Configuracion preguntas ASA</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">

                <a asp-page="/ASA/ConfiguracionPreguntaAsa" asp-page-handler="NewConfiguracionPreguntaAsa" class="fa fa-plus" style="font-size:20px;"></a>

                <table id="paginated-table" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Grupo</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 1;
                            foreach (var item in Model.ConfiguracionPreguntaAsaModelView)
                            {
                                <tr>
                                    <td>@(i++)</td>
                                    <td>@item.GrupoModelView.Nombre</td>
                                    <td>@item.FechaInicial.ToString("dd/MM/yyyy")</td>
                                    <td><a asp-page-handler="EditConfiguracionPreguntaAsa" asp-page="/ASA/ConfiguracionPreguntaAsa" asp-route-id="@item.Id" class="fa fa-edit" style="font-size:15px;"></a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                @{
                    if (Model.Message != null && Model.Message != string.Empty)
                    {
                        <div id="mensajeDiv" class="callout callout-danger">
                            @Model.Message
                        </div>
                    }
                }
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- To here -->
<script>
    $(function () {
        $('#paginated-table').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
            "pageLength": 30
        });
    });
</script>
