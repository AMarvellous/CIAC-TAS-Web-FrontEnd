@page "/Materia/{handler?}/{id?}"
@model CIAC_TAS_Web_UI.Pages.General.MateriaModel
@{
    ViewData["Title"] = "Materia";
}


<!-- From here, we should put this code as template in each page -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Materia Page</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                        <li class="breadcrumb-item active">Materia Page</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- /.box-header -->
    <div class="col-sm-12">
        <a asp-page="/General/Materias" class="fa fa-arrow-circle-left" style="font-size:25px;"></a>
    </div>
    <br />

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Materia</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">

                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>                   

                    <div class="form-group">
                        <label asp-for="MateriaModelView.MateriaCodigo">Codigo de Materia</label>
                        <input type="text" asp-for="MateriaModelView.MateriaCodigo" class="form-control" placeholder="Ingrese un Codigo de Materia">
                        <span asp-validation-for="MateriaModelView.MateriaCodigo" style="color:red"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MateriaModelView.Nombre">Nombre</label>
                        <input type="text" asp-for="MateriaModelView.Nombre" class="form-control" placeholder="Ingrese un Nombre">
                        <span asp-validation-for="MateriaModelView.Nombre" style="color:red"></span>
                    </div>

                    <div class="row">
                        @{
                            if (Model.MateriaModelView?.Id > 0)
                            {
                                        <div class="col-4">
                                            <input type="submit" asp-page-handler="EditMateria" class="btn btn-primary btn-block" value="Guardar">
                                        </div>

                            }
                            else
                            {
                                        <div class="col-4">
                                            <input type="submit" asp-page-handler="NewMateria" class="btn btn-primary btn-block" value="Crear">
                                        </div>
                            }
                        }

                        <!-- /.col -->
                    </div>
                </form>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                @{
                    if (Model.Message != null && Model.Message != string.Empty)
                    {
                                <div id="mensajeDiv" class="callout callout-danger">
                            @Model.Message
                                </div>
                    }
                }
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
