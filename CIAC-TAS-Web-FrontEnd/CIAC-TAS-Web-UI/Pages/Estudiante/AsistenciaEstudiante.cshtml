@page "/AsistenciaEstudiante/{handler?}/{AsistenciaEstudianteHeaderId?}/{Id?}"
@model CIAC_TAS_Web_UI.Pages.Estudiante.AsistenciaEstudianteModel
@{
    ViewData["Title"] = "AsistenciaEstudiante";
}

<!-- From here, we should put this code as template in each page -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Asistencia Estudiante Page</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                        <li class="breadcrumb-item active">Asistencia Estudiante Page</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- /.box-header -->
    <div class="col-sm-12">
        <a asp-page="/Estudiante/AsistenciaEstudianteHeader" asp-page-handler="EditAsistenciaEstudianteHeader" asp-route-id="@ViewContext.RouteData.Values["AsistenciaEstudianteHeaderId"]" class="fa fa-arrow-circle-left" style="font-size:25px;"></a>
    </div>
    <br />

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Asistencia Estudiante</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">

                <div class="card-body">

                    <form method="post">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">
                        <label asp-for="AsistenciaEstudianteModelView.EstudianteId" class="control-label">Materia</label>
                            <select asp-for="AsistenciaEstudianteModelView.EstudianteId" asp-items="Model.EstudianteOptions" class="form-control" placeholder="Seleccione una opcion">
                            <option value="">Seleccione una opcion</option>
                        </select>
                            <span asp-validation-for="AsistenciaEstudianteModelView.EstudianteId" class="text-danger"></span>
                    </div>


                        <br />
                        <div class="row">
                            @{
                                if (Model.AsistenciaEstudianteModelView?.Id > 0)
                                {
                                    <div class="col-4">
                                        <input type="submit" asp-page-handler="EditAsistenciaEstudiante" class="btn btn-primary btn-block" value="Guardar">
                                    </div>

                                }
                                else
                                {
                                    <div class="col-4">
                                        <input type="submit" asp-page-handler="NewAsistenciaEstudiante" asp-route-asistenciaEstudianteHeaderId="@ViewContext.RouteData.Values["asistenciaEstudianteHeaderId"]" class="btn btn-primary btn-block" value="Crear">
                                    </div>
                                }
                            }

                            <!-- /.col -->
                        </div>
                    </form>

                </div>


            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                @{
                    if (Model.Message != null && Model.Message != string.Empty)
                    {
                        <div id="mensajeDiv" class="callout callout-danger">
                            @Model.Message
                        </div>
                    }
                }
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
