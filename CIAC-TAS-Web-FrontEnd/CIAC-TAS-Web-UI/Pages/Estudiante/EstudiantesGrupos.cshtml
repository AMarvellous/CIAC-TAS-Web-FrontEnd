@page "/EstudiantesGrupos"
@model CIAC_TAS_Web_UI.Pages.Estudiante.EstudiantesGruposModel
@{
	ViewData["Title"] = "Estudiantes Grupos";
}

<!-- From here, we should put this code as template in each page -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Estudiantes Grupos Page</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
						<li class="breadcrumb-item active">Estudiantes Grupos Page</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">

		<!-- Default box -->
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Lista Estudiantes y Grupos Asignados</h3>

				<div class="card-tools">
					<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
						<i class="fas fa-minus"></i>
					</button>
				</div>
			</div>
			<div class="card-body">

				<a asp-page="/Estudiante/EstudianteGrupo" asp-page-handler="NewEstudianteGrupo" class="fa fa-plus" style="font-size:20px;"></a>

				<table id="paginated-table" class="table table-bordered table-hover">
					<thead>
						<tr>
							<th></th>
							<th>Estudiante</th>
							<th>Grupo</th>
							@*<th>Acciones</th>*@
						</tr>
					</thead>
					<tbody>
						@{
							var i = 1;
							foreach (var item in Model.EstudianteGrupoModelView)
							{
								<tr>
									<td>@(i++)</td>
									<td>@item.EstudianteNombre</td>
									<td>@item.GrupoNombre</td>
								</tr>
							}
						}
					</tbody>
				</table>

			</div>
			<!-- /.card-body -->
			<div class="card-footer">
				@{
					if (Model.Message != null && Model.Message != string.Empty)
					{
						<div id="mensajeDiv" class="callout callout-danger">
							@Model.Message
						</div>
					}
				}
			</div>
			<!-- /.card-footer-->
		</div>
		<!-- /.card -->

	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- To here -->
<script>
	$(function () {
		$('#paginated-table').DataTable({
			"paging": true,
			"lengthChange": false,
			"searching": false,
			"ordering": true,
			"info": true,
			"autoWidth": false,
			"responsive": true,
			"pageLength": 30
		});
	});
</script>