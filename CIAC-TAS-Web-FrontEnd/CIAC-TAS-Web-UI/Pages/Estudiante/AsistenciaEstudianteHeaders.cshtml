@page "/AsistenciaEstudianteHeaders"
@model CIAC_TAS_Web_UI.Pages.Estudiante.AsistenciaEstudianteHeadersModel
@{
    ViewData["Title"] = "AsistenciaEstudianteHeader";
}

<!-- From here, we should put this code as template in each page -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Asistencia Estudiante Page</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                        <li class="breadcrumb-item active">Asistencia Estudiante Page</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Lista Asistencia Estudiante</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">

                <p>
                    <a asp-page="/Estudiante/AsistenciaEstudianteHeader" asp-page-handler="NewAsistenciaEstudianteHeader" class="fa fa-plus" style="font-size:20px;"></a>
                </p>
                <table id="paginated-table" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Grupo</th>
                            <th>Materia</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.AsistenciaEstudianteHeaderModelView)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GrupoNombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MateriaNombre)
                                </td>
                                <td>
                                    <a asp-page-handler="EditAsistenciaEstudianteHeader" asp-page="/Estudiante/AsistenciaEstudianteHeader" asp-route-id="@item.Id" class="fa fa-edit" style="font-size:15px;"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                @{
                    if (Model.Message != null && Model.Message != string.Empty)
                    {
                        <div id="mensajeDiv" class="callout callout-danger">
                            @Model.Message
                        </div>
                    }
                }
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- To here -->

<script>
    $(function () {
        $('#paginated-table').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
            "pageLength": 30
        });

        //align search box to left
        $("#paginated-table_filter").parent().closest('div').removeClass("col-md-6").addClass("col-md-12")
    });
</script>


